<!doctype html>
<html lang="en">
    <%- include('./partials/head', { title })%>
    <body>
        <%- include('./partials/nav') %>
        <div class="p-5">
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
                <i class="bi bi-plus-lg"></i>
                Add Category
            </button>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Category ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Buttons</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach((item) => { %>
                        <tr>
                            <th><%= item.id  %></th>
                            <td><%= item.name  %></td>
                            <td><%= item.description  %></td>
                            <td>
                                <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target=<%= "#" + item.id %>>
                                    <i class="bi bi-pencil-square"></i>
                                </button>
                                <form action="/categories/<%= item.id %>" method="POST" class='d-inline'>
                                    <button type="submit" class="btn btn-danger delete-button" id=<%= item.id  %> >
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                            <%- include('./partials/categoryUpdateModal.ejs', { formName: "categoryUpdateForm", category: item }) %>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <%- include('./partials/categoryAddModal', { formName: 'categoryAddForm' })%>
    </body>
</html>
