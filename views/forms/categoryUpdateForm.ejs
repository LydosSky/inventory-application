<form action="/categories/categoryUpdate" method="POST" class="row p-3">
  <div class="mb-3">
    <label for="name" class="form-label">Category ID</label>
    <input  name="id" type="text" id='name' class="form-control" readonly value=<%= category.id %>>
  </div>

  <div class="mb-3">
    <label for="name" class="form-label">Category</label>
    <input name="name" type="text" id='name' class="form-control" value=<%= category.name %> >
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <input  name="description" id='description' type="text" class="form-control" value=<%= category.description %>>
  </div>
  <div class="mb-3">
    <button type="submit" class="btn btn-primary w-100">Submit</button>
  </div>
</form>
