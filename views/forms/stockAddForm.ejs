<form action="/stockAdd" method="POST" class="row p-3">

  <div class="mb-3">
    <label for="storeId" class="form-label">Store Id</label>
    <select name="storeId" id="storeId" class="form-select">
      <% stores.forEach(s => {%>
        <option value=<%= s.id %>><%= s.id%> | <%= s.name%></option>
      <%}) %>

    </select>
  </div>

  <div class="mb-3">
    <label for="productId" class="form-label">Product Id</label>
    <select name="productId" id="storeId" class="form-select">
      <% products.forEach(p => {%>
        <option value=<%= p.id %>><%= p.id%> | <%= p.name%></option>
      <%}) %>

    </select>
  </div>

  <div class="mb-3">
    <label for="quantity" class="form-label">Quantity</label>
    <input name='stockQuantity' id="quantity' type="text" class="form-control">
  </div>

  <div class="mb-3">
    <button type="submit" class="btn btn-primary w-100">Submit</button>
  </div>
</form>
