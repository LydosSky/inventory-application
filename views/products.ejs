<!doctype html>
<html lang="en">
    <%- include('./partials/head', { title })%>
    <body>
        <%- include('./partials/nav') %>
        <div class="px-5">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Add Product
            </button>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Product ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Price</th>
                        <th scope="col">Category ID</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach((item) => { %>
                        <tr>
                            <th><%= item.id  %></th>
                            <td><%= item.name  %></td>
                            <td><%= item.description  %></td>
                            <td>$<%= item.price  %></td>
                            <td><%= item.category_id  %> | <%= categories.reduce((prev, curr) => curr.id === item.category_id ? curr.name : prev, "")%></td>
                            <td>
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target=<%= "#" + item.id %>>
                                    Update Product
                                </button>
                            </td>
                            <%- include('./partials/productUpdateModal.ejs', { formName: "productUpdateForm", product: item, categories: categories }) %>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <%- include('./partials/productAddModal', { formName: "productAddForm", categories: categories })  %>
    </body>
</html>
